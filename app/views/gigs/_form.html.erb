<%= form_for(@gig) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
    <%= error_tag(@gig, :name) %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %><br />
  </div>
  <div class="field">
    <%= f.label :infomation %><br />
    <%= f.text_area :infomation %><br />
    <%= error_tag(@gig, :infomation) %>
  </div>
  <div class="field">
    <%= f.label :prefecture_code %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, :prompt => true %>
    <%= error_tag(@gig, :prefecture_code) %>
  </div>
  <div class="field">
    <%= f.label :day %><br />
    <%= f.date_select :day %><br />
    <%= error_tag(@gig, :day) %>
  </div>
  <div class="field">
    <%= f.label :yotube_url %><br />
    <%= f.text_field :yotube_url %><br />
    <%= error_tag(@gig, :yotube_url) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
