

    <div class="container">

      <!-- Typography
      ================================================== -->
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h2 id="type"><%= @gig.name %></h2>
            </div>
          </div>
        </div>
        <% pref = JpPrefecture::Prefecture.find @gig.prefecture_code %>
        <%= @gig.day %>(<%= pref.name %>)<br/><br/>

        <%= image_tag @gig.flyer_url, :size => "350x300" %>

        <!-- Headings -->

        <div class="row">
          <div class="col-lg-4">

            <div class="bs-example">
              <p class="lead"><%= br(@gig.infomation) %></p>
            </div>

            <br/>
            <% if @gig.yotube_url != "" %>
              <iframe width="500" height="300" src="<%= @gig.yotube_url %>?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
            <% end %>
          </div>
        </div>

        <br/><br/>
        <%= link_to 'TOPへ戻る', '/' %>
        <br/><br/>

    </div>



