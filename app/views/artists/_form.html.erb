
   <div class="container">

    <%= form_for(@artist) do |f| %>
      <!-- Forms
      ================================================== -->
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h2 id="forms">アーティストを登録する</h2>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="well">
              <form class="bs-example form-horizontal">
                <fieldset>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">アーティスト名<font color="#18bc9c">（必須）</font></label>
                    <div class="col-lg-10">
                      <%= f.text_field :name,:class => "form-control",:id => "inputEmail",:placeholder => "name" %>
                      <%= error_tag(@artist, :name) %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">画像<font color="#18bc9c">（必須）</font></label>
                    <div class="col-lg-10">
                      <%= f.file_field :image,:class => "form-control" %>
                      <%= error_tag(@artist, :image) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">ジャンル<font color="#18bc9c">（必須）</font></label>
                    <div class="col-lg-10">
                      <%= f.text_field :gunre,:class => "form-control",:id => "inputEmail",:placeholder => "gunre" %>
                      <%= error_tag(@artist, :gunre) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="textArea" class="col-lg-2 control-label">詳細<font color="#18bc9c">（must）</font></label>
                    <div class="col-lg-10">
                      <%= f.text_area :detail,:class => "form-control",:placeholder => "detail" %>
                      <%= error_tag(@artist, :detail) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">国<font color="#18bc9c">（must）</font></label>
                    <div class="col-lg-10">
                      <%= f.country_select :country , [ "Japan","United States","United Kingdom","Australia", "France","Germany","Spain","Ireland","Italy","Sweden","Brazil","Canada", "Denmark", "Israel","Singapore", "India", "Indonesia", "Korea, Republic of" , "China","Hong Kong", "Thailand","South Africa"] %>
                      <%= error_tag(@artist, :country) %>

                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">
                    SoundCloud URL（任意）</label>
                    <div class="col-lg-10">
                      <%= f.text_field :soundcloud_url,:class => "form-control",:id => "inputEmail",:placeholder => "soundcloud_url" %>
                      <%= error_tag(@artist, :soundcloud_url) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">
                    YouTube URL（任意）</label>
                    <div class="col-lg-10">
                      <%= f.text_field :yotube_url,:class => "form-control",:id => "inputEmail",:placeholder => "youtube" %><br />
                      <%= error_tag(@artist, :yotube_url) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                      <button class="btn btn-default" >Cancel</button>
                      <%= f.submit :class => "btn btn-primary" %>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>

        </div>
      </div>
      <% end %>
    </div>

